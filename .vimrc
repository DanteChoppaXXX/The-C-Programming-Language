" Enable syntax highlighting
syntax on

" Show line numbers
set number

" Enable relative line numbers (optional, useful for jumping lines)
set relativenumber

" Enable auto-indentation
set autoindent
set smartindent
set tabstop=4       " Number of spaces a tab counts for
set shiftwidth=4    " Number of spaces to use for each indent
set expandtab       " Use spaces instead of tabs

" Show matching brackets
set showmatch

" Enable mouse support (can help when selecting text)
set mouse=a

" Highlight current line
set cursorline

" Turn on line wrapping (or set nowrap to disable)
set wrap

" Search settings
set ignorecase
set smartcase
set incsearch
set hlsearch
